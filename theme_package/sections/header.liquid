<header class="site-header" style="background: {% if template.name == 'index' %}rgba(255,255,255,0.95){% else %}white{% endif %};">
  <div class="header-wrapper">
    <div class="site-logo">
      <a href="/" style="text-decoration: none; color: inherit;">
        {{ shop.name }}
      </a>
    </div>
    
    <nav>
      <ul class="main-menu">
        {% for link in linklists.main-menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>

